    {
      "@type": "Property",
      "name": "sensors",
      "schema": {
        "@type": "Map",
        "mapKey": { "name": "sensorId", "schema": "string" },
        "mapValue": {
          "name": "spec",
          "schema": {
            "@type": "Object",
            "fields": [
              { "name": "type", "schema": "string" },
              { "name": "unit", "schema": "string" }
            ]
          }
        }
      }
    },
    {
      "@type": "Relationship",
      "name": "hostsDevices",
      "target": "dtmi:bpm:DeviceTwin;1"
