{
  "@id": "dtmi:bpm:SpaceTwin;1",
  "@type": "Interface",
  "@context": "dtmi:dtdl:context;3",
  "displayName": "Space Twin",
  "contents": [
    {
      "@type": "Property",
      "name": "spaceId",
      "schema": "string",
      "description": "Stable identifier of the physical space or zone."
    },
    {
      "@type": "Property",
      "name": "name",
      "schema": "string"
    },
    {
      "@type": "Property",
      "name": "kind",
      "schema": {
        "@type": "Enum",
        "valueSchema": "string",
        "enumValues": [
          { "name": "Lab", "enumValue": "lab" },
          { "name": "Gym", "enumValue": "gym" },
          { "name": "Outdoor", "enumValue": "outdoor" }
        ]
      }
    },
    {
      "@type": "Property",
      "name": "capacity",
      "schema": "integer"
    },
    {
      "@type": "Property",
      "name": "openHours",
